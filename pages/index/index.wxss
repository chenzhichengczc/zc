page {
  background-color: #f0f0f0;
}

.banner {
  width: 100%;
  height: 411rpx;
}

.funcs {
  background-color: #fff;
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 20rpx 0 0rpx 0;
}

.funcs .func {
  width: 25%;
  text-align: center;
  margin-bottom: 30rpx;
}

.funcs .func image {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
}

.funcs .func .name {
  text-align: center;
  color: #666;
  font-size: 26rpx;
  margin-top: 10rpx;
}

.maylike {
  background-color: #fff;
  /* margin-top: 30rpx; */
  padding-top: 20rpx;
}

.maylike .title, .title {
  color: black;
  font-size: 38rpx;
  font-weight: bold;
  margin-left: 28rpx;
  margin-bottom: -10rpx;
  margin-bottom: 10rpx;
}

.comments {
  background-color: #fff;
  margin-top: 30rpx;
  padding-left: 20rpx;
}

.comments .conut {
  color: #111;
  font-size: 28rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 3rpx solid #f0f0f0;
}

.comments .comment {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  padding-top: 20rpx;
}

.comments .comment .cover {
  width: 70rpx;
  height: 70rpx;
  border-radius: 60rpx;
  margin-left: 10rpx;
  margin-right: 14rpx;
  flex-shrink: 0;
}

.comments .comment .info {
  flex: 1;
  padding-bottom: 20rpx;
  border-bottom: 3rpx solid #f0f0f0;
  margin-right: 10rpx;
}

.comments .comment .info .name {
  color: #111;
  font-size: 32rpx;
  font-weight: bold;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  line-height: 1.1em;
}

.comments .comment .info .star {
  color: #111;
  font-size: 26rpx;
  margin-top: 4rpx;
}

.comments .comment .info .star .star-rating {
  display: inline-block;
}

.comments .comment .info .star .star-rating image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 4rpx;
}

.comments .comment .info .msg {
  color: #111;
  font-size: 26rpx;
  margin-top: 4rpx;
  line-height: 36rpx;
}

.comments .comment .info .picture {
  margin-top: 16rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: center;
}

.comments .comment .info .picture image {
  width: 120rpx;
  height: 120rpx;
  display: inline-block;
  margin-right: 40rpx;
}

.good {
  overflow: hidden;
  position: relative;
  border-radius: 8rpx;
  margin: 25rpx;
}

.good image {
  width: 100%;
  height: 300rpx;
  vertical-align: bottom;
}

.good .mask {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  height: 100%;
  width: 560rpx;
  border-top-left-radius: 8rpx;
  border-bottom-left-radius: 8rpx;
  background: linear-gradient(to right, rgba(0, 0, 0, 0.6)0, rgba(0, 0, 0, 0)100%);
}

.good .info {
  position: absolute;
  top: 30rpx;
  left: 12rpx;
  z-index: 2;
  overflow: hidden;
}

.good .info .title {
  color: #fff;
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.info .title text {
  overflow: hidden;
  text-overflow: ellipsis;
  text-shadow: 2rpx 2rpx rgba(0, 0, 0, 0.4);
  -webkit-line-clamp: 2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}

.good .detail {
  position: relative;
  padding-left: 36rpx;
}

.good .detail .timeinfo {
  color: #fff;
  font-size: 22rpx;
  line-height: 1;
}

.good .timeinfo text {
  margin-right: 20rpx;
}

.good .depict {
  color: #fff;
  font-size: 28rpx;
  line-height: 1;
  margin-top: 6rpx;
}

.good  .detail::before {
  content: '';
  position: absolute;
  top: 4rpx;
  left: 24rpx;
  width: 6rpx;
  height: 100%;
  background-color: #4abdcc;
}

.good .userinfo {
  position: absolute;
  left: 25rpx;
  bottom: 35rpx;
  z-index: 2;
}

.good .userinfo image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
}

.good .userinfo .username {
  margin-left: 15rpx;
  color: #fff;
  font-size: 20rpx;
  vertical-align: middle;
}

.good .bottom {
  position: absolute;
  left: 25rpx;
  bottom: 20rpx;
  z-index: 2;
  color: #fff;
  font-size: 22rpx;
  display: flex;
  flex-wrap: nowrap;
  flex-direction: row;
  width: 660rpx;
  align-items: flex-end;
  background-color: rgba(0, 0, 0, 0.7);
}

.bottom .price {
  color: #f63;
  font-size: 30rpx;
  margin-right: 14rpx;
  font-weight: bold;
  margin-left: 5rpx;
}

.bottom .oldprice {
  color: #fff;
  font-size: 22rpx;
  text-decoration: line-through;
  flex: 1;
}

.bottom .selled {
  color: #4abdcc;
  font-size: 30rpx;
  font-weight: bold;
}

/*横向布局  */

.layout_horizontal {
  height: 100rpx;
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: row;
}

.box image {
  width: 400rpx;
  height: 200rpx;
}

.box image {
  margin-left: 5rpx;
  margin-right: 5rpx;
}

.search {
  background-color: #fff;
  margin: 20rpx 40rpx;
  border-radius: 70rpx;
  height: 70rpx;
  line-height: 70rpx;
  display: flex;
  flex-wrap: nowrap;
  padding: 0 30rpx;
  vertical-align: middle;
  align-items: center;
}

.search icon {
  margin-right: 10rpx;
  height: 18px;
}

.search input {
  flex: 1;
  vertical-align: middle;
  height: 70rpx;
  display: inline-block;
  font-size: 26rpx;
}
